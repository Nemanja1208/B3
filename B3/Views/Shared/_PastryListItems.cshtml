<!-- Partial View for Pastry-->
@model Pastry

<li class="list-group-item">
    <!-- Custom content-->
    <div class="media align-items-lg-center flex-column flex-lg-row p-3">
        <div class="media-body order-2 order-lg-1">
            <h5 class="mt-0 font-weight-bold mb-2">
                <a asp-controller="Pastry" asp-action="Details" asp-route-id="@Model.PastryId">@Model.Name</a>
            </h5>
            <p class="font-italic text-muted mb-0 small">@Model.Description</p>
            <div class="d-flex align-items-center justify-content-between mt-1">
                <h6 class="font-weight-bold my-2">@Model.Category.CategoryName</h6>
            </div>
        </div><img src=@Model.ImageThumbnailUrl alt="Generic placeholder image" width="200" class="ml-lg-5 order-1 order-lg-2">
    </div> <!-- End -->
</li>
